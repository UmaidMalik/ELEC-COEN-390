<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue"
    tools:context=".DayGraph">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_above="@id/bottom_navigation">

<TextView
    android:id="@+id/textViewAVGExposure"
    android:text="AVERAGE UV EXPOSURE"
    android:textColor="@color/light_blue"
    android:layout_width="100dp"
    android:layout_height="20dp"
    android:textSize="15sp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="10dp"
    />
    <TextView
        android:text="MAX UV LEVEL"
        android:textColor="@color/light_blue"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@id/textViewAVGExposure"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/avgUV"
        android:textColor="@color/light_blue"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:text="0.00"
        android:layout_toEndOf="@id/textViewAVGExposure"

        />

    <TextView
        android:id="@+id/maxUV"
        android:textColor="@color/light_blue"
        android:layout_width="50dp"
        android:textSize="15sp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/textViewAVGExposure"
        android:layout_below="@id/textViewAVGExposure"
        android:text="0.00"
        />



</RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@id/bottom_navigation"
        android:layout_alignParentRight="true">

            android:id="@+id/selectedDate"
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyyy"
            android:layout_centerInParent="true"
            android:textSize="32sp"
            android:textColor="@color/light_blue"/>




    </RelativeLayout>
    <com.jjoe64.graphview.GraphView
    android:id="@+id/graph"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="140dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">


</com.jjoe64.graphview.GraphView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/secondary_blue"
        app:itemBackground="@color/secondary_blue"
        app:itemIconTint="@animator/nav_selector"
        app:itemTextColor="@animator/nav_selector"/>


</RelativeLayout>