<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/editButton"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:text="EDIT" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="25dp"
        android:textColor="#B1D4E0"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="240dp"
        android:layout_toEndOf="@+id/textView2"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#B1D4E0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="25dp"
        android:text="Age"
        android:textColor="#B1D4E0"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginStart="195dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="338dp"
        android:layout_toEndOf="@+id/textView3"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="2"
        android:text="00"
        android:textColor="#B1D4E0"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="25dp"
        android:text="Skin Tone "
        android:textColor="#B1D4E0"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="25dp"
        android:text="Eye Colour"
        android:textColor="#B1D4E0"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="270dp"
        android:text="SAVE" />

    <Spinner
        android:id="@+id/skinToneSpinner"
        android:layout_width="188dp"
        android:layout_height="59dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="515dp"
        android:layout_toEndOf="@+id/textView4"
        android:dropDownSelector="@color/light_blue"
        />


    <Spinner
        android:id="@+id/eyeColourSpinner"
        android:layout_width="183dp"
        android:layout_height="63dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="600dp"
        android:layout_toEndOf="@+id/textView5"
        />

    <TextView
        android:id="@+id/selectedProfileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"

        android:textColor="#B1D4E0"
        android:textSize="30sp"
        />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="25dp"
        android:text="Gender"
        android:textColor="#B1D4E0"
        android:textSize="18sp"
        />

    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="425dp"
        android:layout_toEndOf="@+id/textView8"

        />

    <TextView
        android:id="@+id/textMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="PROFILE"
        android:textColor="#B95D63"
        android:textSize="36sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/secondary_blue"
        app:itemBackground="@color/secondary_blue"
        app:itemIconTint="@animator/nav_selector"
        app:itemTextColor="@animator/nav_selector"/>



</RelativeLayout>