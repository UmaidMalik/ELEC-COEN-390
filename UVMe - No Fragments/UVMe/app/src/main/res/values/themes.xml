<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UVMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_blue</item>
        <item name="colorPrimaryVariant">@color/midnight_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme_red" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/red_colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/red_colorAccent</item>

    </style>
    <style name="AppTheme_pink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/pink_colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/pink_colorAccent</item>

    </style>
    <style name="AppTheme_violet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/violet_colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/violet_colorAccent</item>

    </style>
    <style name="AppTheme_green" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/green_colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/green_colorAccent</item>

    </style>
    <color name="red_colorPrimary">#ff0000</color>
    <color name="red_colorPrimaryDark">#DF0000</color>
    <color name="red_colorAccent">#F7F72D</color>

    <color name="pink_colorPrimary">#e91e63</color>
    <color name="pink_colorPrimaryDark">#cb1755</color>
    <color name="pink_colorAccent">#2095f2</color>

    <color name="violet_colorPrimary">#6639b6</color>
    <color name="violet_colorPrimaryDark">#502ca7</color>
    <color name="violet_colorAccent">#e81d62</color>

    <color name="green_colorPrimary">#4caf50</color>
    <color name="green_colorPrimaryDark">#419744</color>
    <color name="green_colorAccent">#785447</color>

</resources>