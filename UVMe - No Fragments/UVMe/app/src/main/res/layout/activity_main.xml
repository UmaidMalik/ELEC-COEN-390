<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/midnight_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="58dp">


<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/midnight_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editTextCitySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter City Name"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/light_blue"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_light" />

    <Button
        android:id="@+id/buttonCitySearch"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_city_search"
        android:drawableTint="@color/light_blue"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:text="Country"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:text="City"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="Temperature"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/light_blue"
            android:textSize="20sp"/>


        <ImageView
            android:id="@+id/imageViewWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="25dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            android:src="@drawable/ic_cloud"/>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="25dp"
        android:textSize="40sp"
        android:textColor="@color/font_lightblue"
        android:fontFamily="@font/roboto_light"
        android:id="@+id/activityMain"
        android:textAlignment="center" />



    <RelativeLayout
        android:id="@+id/layout_sun"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true">


    <ImageView
        android:id="@+id/ic_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleX="1.6"
        android:scaleY="1.6"
        app:srcCompat="@drawable/ic_sunlight_default_level1_lightblue"
        tools:ignore="VectorDrawableCompat" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textViewUVIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/light_blue" />

            <TextView
                android:id="@+id/textViewUVI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UVI"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/light_blue" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentRight="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:layout_marginTop="80dp"
                android:text="Sensor Battery"
                android:layout_centerHorizontal="true"
                android:textColor="@color/light_blue"/>





            <TextView
                android:id="@+id/textViewBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/light_blue"
                android:layout_marginTop="45dp"
                />
        </RelativeLayout>

    </RelativeLayout>











</RelativeLayout>
</ScrollView>

<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/bottom_navigation"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
app:menu="@menu/bottom_nav_menu"
android:background="@color/secondary_blue"
app:itemBackground="@color/secondary_blue"
app:itemIconTint="@animator/nav_selector"
app:itemTextColor="@animator/nav_selector"/>

    </RelativeLayout>
