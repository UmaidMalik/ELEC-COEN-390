<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        // Customization of dark mode - when the phone is in dark mode the app will turn to dark
        // mode as well
        <item name="colorPrimary">@color/secondary_blue</item>
        <item name="colorPrimaryVariant">@color/midnight_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="backgroundColor">@color/midnight_blue</item>
        <item name="secondaryColor">@color/secondary_blue</item>
        <item name="buttonColor">@color/secondary_blue</item>
        <item name="textColor">@color/light_blue</item>
        <item name="tintColor">@color/teal_200</item>

       <!-- <item name="android:forceDarkAllowed">true</item> -->

    </style>

</resources>